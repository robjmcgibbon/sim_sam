    cd "/disk01/rmcg/downloaded/tng/tng100-1/snapshot_${i}"
    wget -nd -nc -nv -e robots=off -l 1 -r -A hdf5 --content-disposition --header="API-Key: e29d3996761a7baf1290ed96a9d6f0f9" "http://www.tng-project.org/api/TNG100-1/files/snapshot-${i}/?format=api" 
